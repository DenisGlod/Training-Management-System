<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	version="3.1">
	<display-name>tms</display-name>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
	<servlet>
		<servlet-name>Login</servlet-name>
		<jsp-file>/WEB-INF/pages/login.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
		<servlet-name>Login</servlet-name>
		<url-pattern>/login.html</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>Registration</servlet-name>
		<jsp-file>/WEB-INF/pages/registration.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
		<servlet-name>Registration</servlet-name>
		<url-pattern>/registration.html</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>AdminView</servlet-name>
		<jsp-file>/WEB-INF/pages/private/admin/admin.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
		<servlet-name>AdminView</servlet-name>
		<url-pattern>/admin.html</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>TeacherView</servlet-name>
		<jsp-file>/WEB-INF/pages/private/teacher/teacher.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
		<servlet-name>TeacherView</servlet-name>
		<url-pattern>/teacher.html</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>ListenerView</servlet-name>
		<jsp-file>/WEB-INF/pages/private/listener/listener.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
		<servlet-name>ListenerView</servlet-name>
		<url-pattern>/listener.html</url-pattern>
	</servlet-mapping>
	<resource-ref>
		<res-ref-name>jdbc/tms_db</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>
</web-app>